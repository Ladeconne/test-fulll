{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
    },
    "inlineSourceMap": true,
    "removeComments": true
  },
  "include": [
    "src"
, "features"  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typeRoots": ["./@types", "./node_modules/@types"]

}
