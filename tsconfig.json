{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "inlineSourceMap": true,
    "removeComments": true
  },
  "include": [
    "src", "features/step_definitions",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typeRoots": ["./@types", "./node_modules/@types"]

}
